{
  "manifest_version": 3,
  "name": "虛擬幣網站快捷工具",
  "version": "1.0",
  "description": "一鍵開啟多個虛擬幣分析和監控網站",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 